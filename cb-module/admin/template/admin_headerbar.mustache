<nav id="cbAdminNavigationHeader" class="navbar navbar-expand-lg sticky-top navbar-dark bg-dark">
    <a class="navbar-brand" href="/">
        <img src="{{brand_image}}" width="30" height="30" alt="" title="{{brand_text}}">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="navbar-brand nav-link" href="/">{{page_name}}</a>
            </li>
        </ul>
            <span class="navbar-text">{{&admin_message}}</span>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{dashboard_link}}" target=""><i class="fas fa-tachometer-alt"></i> {{dashboard_text}}</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="display-name">{{user_name}}</span> <img src="{{user_image}}" class="avatar avatar-26 photo" />
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item text-center" href="{{user_profile_link}}"><img src="{{user_image}}" class="avatar avatar-128 photo" /></a>
                    <a class="dropdown-item text-center" href="{{user_profile_link}}"><span class="display-name">{{user_name}}</span></a>
                    
                    <a class="dropdown-item" href="{{user_profile_link}}"><i class="fas fa-user-circle"></i> {{user_profile_text}}</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{user_logout_link}}"><i class="fas fa-sign-out-alt"></i> {{user_logout_text}}</a>
                </div>
            </li>
        </ul>
        
    </div>
</nav>