<div class="gTitle">
    <div class="gDrag">
    </div>
    <div class="gImg">
        <a class="img" href="{{path}}" data-lightbox="{{subdir}}">
            <img class="img_id_{{id}}" src="{{paththumb}}" />
        </a>
    </div>
    <div class="form-group textTitle">
        <input type="hidden" name="filename[{{md5name}}]" value="{{filename}}" />
        <textarea name="title[{{md5name}}]" class="form-control" placeholder="[LANG_ADMIN_GALLERY_IMAGE_TITLE_PLACEHOLDER]">{{title}}</textarea>
    </div>
    <div class="editButtons">
        {{#?img_edit_link}}<a class="btn btn-success btn-block edit" href="{{img_edit_link}}"><i class="fas fa-edit"></i> [LANG_ADMIN_GALLERY_IMAGE_EDIT]</a>{{/?img_edit_link}}
        <div class="form-group imgDelete">
            <button type="button" class="btn btn-danger btn-block delete"><i class="fas fa-trash"></i> <span class='btext'>[LANG_ADMIN_GALLERY_IMAGE_DELETE]</span></button>
        </div>
    </div>
</div>