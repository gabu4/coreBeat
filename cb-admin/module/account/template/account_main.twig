<section class='accountList'>
    <div class="col-12">
        <div class="box">
            <div class="box-header">
                <div class="row">
                    <div class="form-group col-lg-4 col-md-6 list-filter filter-text">
                        <div class="input-group">
                            <input type="text" class="form-control" id="filterText" name="ft" placeholder="[LANG_ADMIN_ACCOUNT_MAIN_LIST_SEARCH_TEXT]" value="{{ filter_text }}"/>
                            <div class="input-group-append"><span class="input-group-text"><span class="fas fa-search" aria-hidden="true"></span></span></div>
                        </div>
                    </div>
                    <div class="form-group col-auto ml-auto list-filter filter-state">
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text">[LANG_ADMIN_ACCOUNT_USER_STATE]</span></div>
                            <select class="custom-select" id="filterLanguage" name="fl">
                                <option value="">[LANG_ADMIN_ACCOUNT_USER_STATE_ALL]</option>
                                <option value="active" {% if state is same as('active') %}selected{% endif %}>[LANG_ADMIN_ACCOUNT_USER_STATE_ACTIVE]</option>
                                <option value="inactive" {% if state is same as('active') %}selected{% endif %}>[LANG_ADMIN_ACCOUNT_USER_STATE_INACTIVE]</option>
                                <option value="inactivated" {% if state is same as('active') %}selected{% endif %}>[LANG_ADMIN_ACCOUNT_USER_STATE_NOT_ACTIVED]</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body ">
                {{ body|raw }}
            </div>
        </div>
    </div>
</section>